<odoo>
    <record id="view_character_wizard_form" model="ir.ui.view">
        <field name="name">character.wizard.form</field>
        <field name="model">character.wizard</field>
        <field name="arch" type="xml">
            <form string="Character Data">
                <sheet>
                    <group>
                        <field name="character_name" readonly="1"/>
                        <field name="character_status" readonly="1"/>
                        <field name="character_species" readonly="1"/>
                        <field name="character_gender" readonly="1"/>
                        <field name="character_image" readonly="1"/>
                    </group>
                    <group>
                        <img t-att-src="/web/image?model=character.wizard&amp;field=character_image&amp;id=uid" alt="Character Image" width="200"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>